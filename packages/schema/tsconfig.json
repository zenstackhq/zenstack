{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": ["ESNext"],
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*.ts", "tests/**/*.test.ts"],
    "exclude": ["dist", "bundle", "node_modules", "src/extension.ts"]
}
