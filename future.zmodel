// access policy:
//  - can access auth()
//  - can access relationship
//  - evaluated in the db

// validation rules:
//  - can only access scalar fields
//  - evaluated in Node runtime

model Post {
    id Int @id @default(autoincrement())
    title String @length(5, 100)
    published Boolean

    @@validate(contains(title, 'blog'), 'Title must contain blog')
    @@allow('update', published, [title])
}